<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginLeft="16dp"
    app:cardCornerRadius="10dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    android:elevation="4dp"
    tools:targetApi="lollipop">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:padding="16dp">

        <RelativeLayout
            android:id="@+id/lift_relative"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/home_team_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="@string/home_team_image"
                android:scaleType="center"
                android:src="@drawable/ic_launcher_foreground" />

            <TextView
                android:id="@+id/home_team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_team_img"
                android:layout_centerHorizontal="true"
                android:padding="4dp"
                android:text="@string/team_a"
                android:textStyle="bold" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/right_relative"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/away_team_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="@string/away_team_image"
                android:scaleType="center"
                android:src="@drawable/ic_launcher_foreground" />

            <TextView
                android:id="@+id/away_team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/away_team_img"
                android:layout_centerHorizontal="true"
                android:padding="4dp"
                android:text="@string/team_b"
                android:textStyle="bold" />


        </RelativeLayout>

        <TextView
            android:id="@+id/home_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/lift_relative"
            android:paddingLeft="23dp"
            android:text="@string/score_away"
            android:textColor="#B22222	"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/away_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/right_relative"
            android:paddingRight="23dp"
            android:text="@string/score"
            android:textColor="#B22222"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/statue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/started"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/statue"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/_00_00" />

    </RelativeLayout>

</android.support.v7.widget.CardView>